# source vulkan
if [ -f "$HOME/vulkan/1.3.243.0/setup-env.sh" ]; then
    . "$HOME/vulkan/1.3.243.0/setup-env.sh"
fi


# source cargo
if [ -f "$HOME/.cargo/env" ]; then
    . "$HOME/.cargo/env"
fi

# source rakubrew
if [ -f "$HOME/.rakubrew/bin/rakubrew" ]; then
    eval "$(/home/johnm/.rakubrew/bin/rakubrew init Bash)"
fi

# display system information
if [ -f /usr/bin/neofetch ]; then
    neofetch
fi
