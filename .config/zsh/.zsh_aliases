
# dotfiles
#alias dotfiles='git --git-dir=$HOME/.dotfiles --work-tree=$HOME'

# General Aliases
alias diff="diff --color=auto"
alias l="ls --color=auto"
alias ls="ls -ah --color=auto --group-directories-first"
alias ll="ls -lah --color=auto --group-directories-first"
alias df='df -h'
alias dd='dd status=progress'
alias free='free -m'

# ps
alias ps="ps auxf"
alias psgrep="ps aux | grep -v grep | grep -i -e VSZ -e"

# colorise grep
alias grep="grep --color=auto"
alias egrep="egrep --color=auto"
alias fgrep="fgrep --color=auto"

#continue download
alias wget='wget -c'

# keep things sage
alias cp='cp -i'
alias rm="rm -i"
alias mv="mv -i"
alias ln="ln -s"

# Git Aliases
alias gpush="git push"
alias gpull="git pull --prune"
alias gc="git commit -m"
alias ga="git add ."
alias gs="git status"
alias gadog='PAGER="less -F -X" git adog'
alias glog='PAGER="less -F -X" git log'

# Tmux
alias t="tmux"
alias tkill="tmux kill-session -t"
alias tlist="tmux list-sessions"
alias tattach="tmux attach"

# vim
alias vim="vim"
alias n="nvim"
# vimdiff mode
alias vd='v -d'
# open each file in tab
alias vp='v -p'
# open each file vertsplit
alias vo='v -O'
alias vv='v ~/.vim/vimrc'

# merge new settings
alias merge='xrdb -merge ~/.Xresources'

# mount the folder Public for exchange between host and guest on virtualbox
alias vbm="sudo mount -t vboxsf -o rw,uid=1000,gid=1000 Public /home/$USER/Public"

# hardware info
alias hw="hwinfo --short"

alias sublime_text="/opt/sublime_text/sublime_text"

# emacs
alias em="emacs"
alias customemacs="emacs --with-profile custom"
alias spacemacs="emacs --with-profile spacemacs"
alias doomemacs="emacs --with-profile doomemacs"
alias vanillaemacs="emacs --with-profile vanilla"
