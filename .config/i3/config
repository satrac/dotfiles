###############################################################################
# Define the $mod variable/key,
###############################################################################

# set mod key (Mod1=<Alt>, Mod4=<Super>)
set $mod Mod4
set $alt Mod1
set $super Mod4

###############################################################################
# include conf modules
###############################################################################

include ~/.config/i3/base.conf
include ~/.config/i3/menu.conf
include ~/.config/i3/mediakeys.conf
include ~/.config/i3/appearance.conf
include ~/.config/i3/windowmanagement.conf
include ~/.config/i3/workspaces.conf
include ~/.config/i3/windowrules.conf
include ~/.config/i3/bar.conf
include ~/.config/i3/autostart.conf
